<h1 style="text-align: center;"> {{ title }} </h1>
<div class="row">
    {{# each items }}
    <div class="col-sm">
        <a href="/pictures/id/{{ this.id }}"><img src="{{ this.Sciezka }}/{{ this.NazwaPliku }}.png" alt="..."
                width="200" height="200"></a>
        <figcaption class="figure-caption text-left">
            Nazwa: {{ this.Tytul }} Rozmiar {{ this.Rozmiar }}kB
        </figcaption>
        <figcaption class="figure-caption text-left">
            Liczba kom: {{ this.numOfComment }} Średnia ocena: {{ this.rating }}
        </figcaption>
        <a href="/pictures/id/{{ this.id }}"><button class="btn btn-primary">Szczegóły</button></a>
        <a href="/pictures/update/{{ this.id }}"><button class="btn btn-success">Edytuj</button></a>
        <form action="/pictures/delete" method="post" style="display: inline;">
            <button class="btn btn-danger" type="submit" name="id" id="{{ this.id }}"
                value="{{ this.id }}">Usuń</button>
        </form>
    </div>
    {{/each}}

</div>
<div style="text-align: center; padding: 20px">
    <form action="/pictures/create" method="get">
        <button class="btn btn-dark" type="submit" class="btn-link">Dodaj zdjęcie</button>
    </form>
</div>