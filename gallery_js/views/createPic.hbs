{{#if errors}}
<div class="alert alert-danger" role="alert">
    <ul>
        {{#each errors }}
        <li>{{ this.msg }} </li>
        {{/each}}
    </ul>
</div>
{{/if}}
<form action="../pictures/create" method="post">
    <h3 style="text-align: center;"> Dodaj zdjęcie </h3>
    <div class="form-group">
        <label for="Tytul">Tytuł:</label>
        <input class="form-control" type="text" id="Tytul" name="Tytul">
        <label for="Opis">Opis:</label>
        <input class="form-control" type="text" id="Opis" name="Opis">
        <label for="Data">Data:</label>
        <input class="form-control" type="date" id="Data" name="Data">
        <label for="NazwaPliku">Nazwa pliku:</label>
        <input class="form-control" type="text" id="NazwaPliku" name="NazwaPliku">
        <label for="Sciezka">Ścieżka:</label>
        <input class="form-control" type="text" id="Sciezka" name="Sciezka">
        <label for="Rozmiar">Rozmiar:</label>
        <input class="form-control" type="number" id="Rozmiar" name="Rozmiar">
        <div class="form-check form-switch">
            <label for="Widocznosc">Widoczność:</label>
            <input class="form-check-input" type="checkbox" checked="checked" id="Widocznosc" name="Widocznosc">
        </div>
        <div class="form-group">
            <label for="Galeria_ID">Wybierz galerię: </label>
            <select class="form-control" id="Galeria_ID" name="Galeria_ID">
                {{#each galleries }}
                <option value="{{this.id}}">{{ this.Tytul }} - {{ this.Opis }} </option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="Tagi">Wybierz tagi: </label>
            <select multiple class="form-control" id="Tagi" name="Tagi">
                {{#each tags }}
                <option> {{this.Tekst}} </option>
                {{/each}}
            </select>
        </div>
    </div>
    <div style="text-align: center; padding: 20px">
        <input class="btn btn-primary btn-lg" type="submit" value="Dodaj">
    </div>
</form>