<h1 style="text-align: center;"> {{ title }} </h1>
<div class="row">
    {{# each items }}
    <div class="col-sm">
        <h3>Tekst: {{this.Tekst }}</h3>
        <a href="/tags/id/{{ this.id }}"><button class="btn btn-primary">Szczegóły</button></a>
        <a href="/tags/update/{{ this.id }}"><button class="btn btn-success">Edytuj</button></a>
        <form action="/tags/delete" method="post" style="display: inline;">
            <button class="btn btn-danger" type="submit" name="id" id="{{ this.id }}"
                value="{{ this.id }}">Usuń</button>
        </form>
    </div>
    {{/each}}

</div>
<div style="text-align: center; padding: 20px">
    <form action="/tags/create" method="get">
        <button class="btn btn-dark" type="submit" class="btn-link">Dodaj tag</button>
    </form>
</div>