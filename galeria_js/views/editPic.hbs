<form action="../update/{{id}}" method="post">
    <h1 style="text-align: center;"> Edytuj </h1>
    <div class="form-group">
        <label for="Tytul">Tytuł:</label>
        <input class="form-control" value='{{item.Tytul}}' type="text" id="Tytul" name="Tytul">
        <label for="Opis">Opis:</label>
        <input class="form-control" value='{{item.Opis}}' type="text" id="Opis" name="Opis">
        <label for="Data">Data:</label>
        <input class="form-control" value='{{ data }}' type="date" id="Data" name="Data">
        <label for="NazwaPliku">Nazwa pliku:</label>
        <input class="form-control" value='{{item.NazwaPliku}}' type="text" id="NazwaPliku" name="NazwaPliku">
        <label for="Sciezka">Ścieżka:</label>
        <input class="form-control" value='{{item.Sciezka}}' type="text" id="Sciezka" name="Sciezka">
        <label for="Rozmiar">Rozmiar:</label>
        <input class="form-control" value='{{item.Rozmiar}}' type="number" id="Rozmiar" name="Rozmiar">
        <div class="form-check form-switch">
            <label class="form-check-label" for="Widocznosc">Widoczność:</label>
            {{#if item.Widocznosc}}
            <input class="form-check-input" type="checkbox" id="Widocznosc" name="Widocznosc" checked="checked">
            {{else}}
            <input class="form-check-input" type="checkbox" id="Widocznosc" name="Widocznosc">
            {{/if}}
        </div>
        <div class="form-group">
            <label for="Galeria_ID">Wybierz galerię: </label>
            <select class="form-control" id="Galeria_ID" name="Galeria_ID">
                {{#each galleries }}
                <option value="{{this.id}}">{{ this.Tytul }} - {{ this.Opis }} </option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="Tagi">Wybierz tagi: </label>
            <select multiple class="form-control" id="Tagi" name="Tagi">
                {{#each tags }}
                <option> {{this.Tekst}} </option>
                {{/each}}
            </select>
        </div>

    </div>
    <div style="text-align: center; padding: 20px">
        <input class="btn btn-primary btn-lg" type="submit" value="Zatwierdź">
    </div>
    </div>
</form>